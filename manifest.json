{
  "manifest_version": 3,
  "name": "AI Context Menu Assistant",
  "version": "1.0",
  "description": "Right-click context menu with OpenAI integration",
  "permissions": ["contextMenus", "storage", "sidePanel", "tabs", "activeTab", "scripting"],
  "host_permissions": ["https://api.openai.com/*", "https://chatgpt.com/*"],
  "background": {"service_worker": "background.js"},
  "action": {"default_popup": "popup.html"},
  "side_panel": {"default_path": "sidepanel.html"},
  "content_scripts": [{"matches": ["https://chatgpt.com/*"], "js": ["content-script.js"]}]
}
